<div class="container text-center">
  <div class="row ustify-content-center">
    <div class="col alert alert-primary">
      <h2 class="mt-2">画像投稿フォーム</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mt-5">
      <div class="card" style="width: 25rem;">
        <img class="card-img-top img-fluid" src="https://picsum.photos/300/200">
        <div class="card-body">
          <%= form_with model: @post_image, local:true do |f| %>
          <h5 class="card-title">画像</h5>
          <p class="card-text"><%= f.attachment_field :image %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6 mt-5">
      <h5>ブックタイトル</h5>
      <%= f.text_field :book_name %>
      <h5>説明</h5>
      <%= f.text_area :caption %>
      <p><%= f.submit '投稿', class: 'btn btn-primary' %></p>
      <% end %>
    </div>
  </div>
</div>